{
  "name": "bob-ai-cli",
  "displayName": "Bob AI CLI",
  "description": "Smart code assistant for Claude Code and other AI CLIs - copy code references, send to terminal, and use quick action templates",
  "version": "0.0.4",
  "publisher": "1031022",
  "repository": {
    "type": "git",
    "url": "https://github.com/sayurbox/ask-bob-ai.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "*"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "title": "Bob AI CLI",
      "properties": {
        "bobAiCli.enableSoundEffects": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable sound feedback when executing commands"
        }
      }
    },
    "commands": [
      {
        "command": "ask-ai-cli.startAICLI",
        "title": "Bob AI: Start AI CLI"
      },
      {
        "command": "ask-ai-cli.copyCodeBlock",
        "title": "Bob AI: Copy Code Reference"
      },
      {
        "command": "ask-ai-cli.sendToTerminal",
        "title": "Bob AI: Send to Terminal"
      },
      {
        "command": "ask-ai-cli.quickActions",
        "title": "Bob AI: Quick Actions"
      },
      {
        "command": "ask-ai-cli.executeQuickAction",
        "title": "Bob AI: Execute Quick Action"
      },
      {
        "command": "ask-ai-cli.addFeature",
        "title": "Bob AI: Add Feature"
      },
      {
        "command": "ask-ai-cli.executePlan",
        "title": "Bob AI: Execute Plan"
      },
      {
        "command": "ask-ai-cli.folderExplain",
        "title": "üìñ Explain This"
      },
      {
        "command": "ask-ai-cli.folderReview",
        "title": "üîç Review Code"
      },
      {
        "command": "ask-ai-cli.folderDeepReview",
        "title": "üî¨ Deep Code Review"
      },
      {
        "command": "ask-ai-cli.folderFindBugs",
        "title": "üêõ Find Bugs"
      },
      {
        "command": "ask-ai-cli.folderGenerateTests",
        "title": "‚úÖ Generate Tests"
      },
      {
        "command": "ask-ai-cli.folderDocument",
        "title": "üìù Add Documentation"
      },
      {
        "command": "ask-ai-cli.folderRefactor",
        "title": "‚ôªÔ∏è Refactor"
      },
      {
        "command": "ask-ai-cli.folderListFiles",
        "title": "üìÇ Show Structure"
      },
      {
        "command": "ask-ai-cli.folderOperations",
        "title": "Bob AI: Folder Operations"
      },
      {
        "command": "ask-ai-cli.toggleSound",
        "title": "Bob AI: Toggle Sound Effects"
      }
    ],
    "submenus": [
      {
        "id": "askAiCli.folder",
        "label": "Bob AI: Actions"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ask-ai-cli.startAICLI",
          "group": "askAiCli@1"
        },
        {
          "submenu": "askAiCli.folder",
          "group": "askAiCli@2"
        },
        {
          "when": "resourceExtname == .md",
          "command": "ask-ai-cli.executePlan",
          "group": "askAiCli@3"
        }
      ],
      "askAiCli.folder": [
        {
          "command": "ask-ai-cli.folderExplain",
          "group": "1_actions"
        },
        {
          "command": "ask-ai-cli.folderReview",
          "group": "1_actions"
        },
        {
          "command": "ask-ai-cli.folderDeepReview",
          "group": "1_actions"
        },
        {
          "command": "ask-ai-cli.folderFindBugs",
          "group": "1_actions"
        },
        {
          "command": "ask-ai-cli.folderGenerateTests",
          "group": "2_mutations"
        },
        {
          "command": "ask-ai-cli.folderDocument",
          "group": "2_mutations"
        },
        {
          "command": "ask-ai-cli.folderRefactor",
          "group": "2_mutations"
        },
        {
          "command": "ask-ai-cli.folderListFiles",
          "group": "3_utils"
        }
      ],
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "ask-ai-cli.sendToTerminal",
          "group": "askAiCli@1"
        },
        {
          "when": "editorHasSelection",
          "command": "ask-ai-cli.quickActions",
          "group": "askAiCli@2"
        },
        {
          "command": "ask-ai-cli.startAICLI",
          "group": "askAiCli@3"
        },
        {
          "command": "ask-ai-cli.addFeature",
          "group": "askAiCli@4"
        },
        {
          "when": "resourceExtname == .md || editorHasSelection",
          "command": "ask-ai-cli.executePlan",
          "group": "askAiCli@5"
        },
        {
          "when": "editorHasSelection",
          "command": "ask-ai-cli.copyCodeBlock",
          "group": "askAiCli@6"
        }
      ],
      "commandPalette": [
        {
          "command": "ask-ai-cli.copyCodeBlock",
          "when": "editorHasSelection"
        },
        {
          "command": "ask-ai-cli.sendToTerminal",
          "when": "editorHasSelection"
        },
        {
          "command": "ask-ai-cli.quickActions",
          "when": "editorHasSelection"
        },
        {
          "command": "ask-ai-cli.startAICLI"
        },
        {
          "command": "ask-ai-cli.addFeature"
        },
        {
          "command": "ask-ai-cli.executePlan"
        },
        {
          "command": "ask-ai-cli.toggleSound"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ask-ai-cli.quickActions",
        "key": "ctrl+k a",
        "mac": "cmd+k a",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "ask-ai-cli.sendToTerminal",
        "key": "ctrl+k d",
        "mac": "cmd+k d",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "ask-ai-cli.copyCodeBlock",
        "key": "ctrl+k f",
        "mac": "cmd+k f",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "ask-ai-cli.startAICLI",
        "key": "ctrl+k g",
        "mac": "cmd+k g",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node check-node-modules.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0"
  }
}